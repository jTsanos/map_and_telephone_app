<?xml version="1.0" encoding="utf-8"?>



    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:id="@+id/popup_window_phone"
      android:background="#22000000"
        >



        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:background="#99cc00"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
           >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Belkosten"
                android:textColor="#fff"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Voor dit nummer betaalt u uw\n      gebruikelijke belkosten"
                android:textColor="#fff"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/btnTwo"
                android:text="          Bel nu             "
                android:textColor="#ffffff"
                android:background="@drawable/main_btn_bg"
                android:drawableLeft="@drawable/main_btn_phone"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:layout_width="wrap_content"
                android:onClick="btnCall"
                android:layout_height="wrap_content"

                android:layout_gravity="bottom|center"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/imageView_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/main_btn_bg"
            android:layout_gravity="top|left"
            android:clickable="true"
            android:text="  Annuleren  "
            android:textSize="14sp"
            android:textColor="#fff"

            android:drawableLeft="@drawable/main_btn_close"
            android:onClick="btnBack"
            />
    </FrameLayout>

